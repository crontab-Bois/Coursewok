using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Data;
using System.Windows.Documents;
using System.Windows.Input;
using System.Windows.Media;
using System.Windows.Media.Imaging;
using System.Windows.Shapes;

namespace Coursework1
{
    /// <summary>
    /// Interaction logic for IndividualWindow.xaml
    /// </summary>
    public partial class IndividualWindow : Window
    {
        public IndividualWindow()
        {
            InitializeComponent();
        }

        List<Individual> Users = Data.getUsers(); //Used to store a temporary list of individuals that the user will input
        Individual newUser = new Individual();
        private void btnPhoneNumberEnter_Click(object sender, RoutedEventArgs e)
        {
            try //Validates user input
            {
                if (txtPhoneNumber.Text.Length == 0)
                {
                    throw new System.ArgumentException("Enter a number first!");
                }

                bool result = long.TryParse(txtPhoneNumber.Text, out long bin); //If TryParse fails then result will be false and an error message will be sent
                if (!result)
                {
                    throw new ArgumentException("Enter a valid number!");
                }

                if (txtPhoneNumber.Text.Length != 11)
                {
                    throw new System.ArgumentException("The number entered does not contain the correct number of digits!");
                }

                if(txtPhoneNumber.Text[0] != '0')
                {
                    throw new System.ArgumentException("Your number does not begin with a 0!");
                }              

                if (Users.Count == 0) //If there are no individuals stored already then add one with the number entered
                {
                    Users.Add(new Individual(txtPhoneNumber.Text));
                    txtPhoneNumber.Clear();
                    throw new System.ArgumentException("User has been entered!");
                }
            }
            catch (ArgumentException ex)
            {
                MessageBox.Show(ex.Message);
                return;
            }


            newUser.addIndivdual(txtPhoneNumber.Text, Users); //sends the input to be checked whether that number is already in the list
            
        }
    }
}
